{
  "name": "ts-lib",
  "version": "0.0.4",
  "license": "MIT",
  "files": [
    "dist",
    "index.d.ts",
    "README.md"
  ],
  "main": "./dist/ts-lib.umd.js",
  "module": "./dist/ts-lib.mjs",
  "types": "./index.d.ts",
  "exports": {
    "types": "./index.d.ts",
    "import": "./dist/ts-lib.mjs",
    "require": "./dist/ts-lib.umd.js"
  },
  "scripts": {
    "dev": "vite serve example",
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && vite build",
    "test": "vitest --coverage --run",
    "test:watch": "vitest --coverage",
    "test:prod": "npm run lint && vitest --coverage --run",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "commit": "git-cz",
    "prepub": "npm run test:prod && npm run build",
    "pub": "sh release.sh"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.2",
    "@types/node": "^18.17.0",
    "@vitest/coverage-v8": "^0.34.4",
    "commitizen": "^4.3.0",
    "eslint": "^8.45.0",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "~5.1.6",
    "vite": "^4.4.6",
    "vitepress": "^1.0.0-rc.10",
    "vitest": "^0.34.4"
  }
}
